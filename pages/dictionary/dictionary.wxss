/* pages/dictionary/dictionary.wxss */
.container {
  display: block;
}



.done {
  border-radius: 0;
  height: 39px;
  width: 39px;
  background-color: #3b78e7;
  flex: 0 0 auto;
  padding: 0;
  color: #ffffff;
  font-size: 15px;
  text-align: center;
}

.content {
  display: block;
  background: #f1f1f1;
  margin: 10px;
  top: 10px;
}

.translation {
  display: block;
  padding: 10px;
}

.footer {
  display: block;
  margin: 10px;
  top: 10px;
}

.refresh {
  padding: 10px;
}

.inputContent {
  display: flex;
  justify-content: space-around;
  align-items: center;
  margin-top: 10px;
}
.iptbox{
  width: 80rpx;
  height: 80rpx;
  border:1rpx solid #ddd;
  border-radius: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
}
.ipt{
  width: 0;
  height: 0;
}

.peep {
  border-color: #ffffff;
  background-color: #ffffff;
  color: #aaaaaa;
  margin-top: 10rpx;
  font-size: 12px;
}
.peep::after {
  border: 0;
}

/* 暂时没用了 */
.header {
  background: #f1f1f1;
  margin: 10px;
  height: 39px;
  display: flex;
  justify-content: space-around;
  position: relative;
  overflow: visible;
}

.word-container {
  line-height: 25px;
  background-color: transparent;
  border: none;
  margin: 0;
  padding: 0 0 0 16px;
  font-size: 16px;
  color: rgba(0,0,0,.87);
  word-wrap: break-word;
  outline: none;
  display: flex;
  flex: 1;
  width: 100%;
}

.word {
    flex: 1;
    display: flex;
    padding: 0, 0, 0, 16px;
    margin: 0;
    outline: none;
    width: 100%;
    height: 100%;
}